{# templates/header.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>来自常鸿飞和冯蔓的新婚请柬</title>
    <link rel="shortcut icon" type="image/x-icon" href="./favicon.ico">
    <script src="https://cdn.lmjia.cn/invite/flexible.min.js"></script>
    <link rel="stylesheet" href="{{ assets }}/font/iconfont.css">
    <link rel="stylesheet" href="{{ assets }}/css/heartbeat.css">
    <link rel="stylesheet" href="{{ assets }}/css/invitation.css">
</head>
<body>
{% block body %}{% endblock %}
</body>
<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
<script>
    var QI_NIU = '//7xo9s0.com1.z0.glb.clouddn.com';
    {% if page == 'girl' %}
    var TITLE = '💕来自冯蔓和常鸿飞的新婚请柬💐🎉💑💐🎉';
    {% else %}
    var TITLE = '💕来自常鸿飞和冯蔓的新婚请柬💐🎉💑💐🎉';
    {% endif %}
    wx.config({
        debug: false,
        appId: '{{ signPackage.appId }}',
        timestamp: {{ signPackage.timestamp }},
        nonceStr: '{{ signPackage.nonceStr }}',
        signature: '{{ signPackage.signature }}',
        jsApiList: [
            'onMenuShareTimeline', 'onMenuShareAppMessage', 'onMenuShareQQ', 'onMenuShareQZone'
        ]
    });
    var wxfx = {
        conf: {
            title: TITLE,
            desc: '我们将于2017年10月05日，河南省濮阳市瑞丰园，11:28，举行婚礼，诚挚欢迎您的到来~',
            link: window.location.href,
            ico: 'http://7xo9s0.com1.z0.glb.clouddn.com/thumbnail.jpg'
        },
        /**
         * 微信分享成功
         * @return {[type]} [description]
         */
        shareSuccess: function () {
            console.log('谢谢分享💌');
        },
        /**
         * 微信分享失败
         * @return {[type]} [description]
         */
        shareCancel: function () {
        },
        initShare: function () {
            //微信朋友圈分享
            wx.onMenuShareTimeline({
                title: wxfx.conf.title,
                link: wxfx.conf.link,
                imgUrl: wxfx.conf.ico,
                success: function () {
                    wxfx.shareSuccess();
                },
                cancel: function () {
                    wxfx.shareCancel();
                }
            });
            //微信朋友分享
            wx.onMenuShareAppMessage({
                title: wxfx.conf.title,
                desc: wxfx.conf.desc,
                link: wxfx.conf.link,
                imgUrl: wxfx.conf.ico,
                type: 'link',
                dataUrl: '',
                success: function () {
                    wxfx.shareSuccess();
                },
                cancel: function () {
                    wxfx.shareCancel();
                }
            });
            //qq分享
            wx.onMenuShareQQ({
                title: wxfx.conf.title,
                desc: wxfx.conf.desc,
                link: wxfx.conf.link,
                imgUrl: wxfx.conf.ico,
                success: function () {
                    wxfx.shareSuccess();
                },
                cancel: function () {
                    wxfx.shareCancel();
                }
            });
            //QQ空间分享
            wx.onMenuShareQZone({
                title: wxfx.conf.title,
                desc: wxfx.conf.desc,
                link: wxfx.conf.link,
                imgUrl: wxfx.conf.ico,
                success: function () {
                    wxfx.shareSuccess();
                },
                cancel: function () {
                    wxfx.shareCancel();
                }
            });
        }
    };
    wx.ready(function () {
        wxfx.initShare();
    });
    wx.error(function (res) {
    });
</script>
{% block footer %}{% endblock %}
</html>